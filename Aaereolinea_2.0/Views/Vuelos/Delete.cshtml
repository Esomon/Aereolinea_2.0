@model aereoliniafinal.Models.Vuelos

@{
    ViewData["Title"] = "Delete";
}



<br />
<h3>¿Esta seguro de eliminar este vuelo?</h3>

<div>
    <h4>Vuelos</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaSalida)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaSalida)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaLlegada)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaLlegada)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Aviones)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aviones.Modelo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ciudades)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ciudades.Nombre)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="VuelosID" />
        <a type="button" class="btn btn-success" asp-action="Index">Cancelar</a> |
        <input type="submit" value="Eliminar" class="btn btn-danger" />
    </form>
</div>
