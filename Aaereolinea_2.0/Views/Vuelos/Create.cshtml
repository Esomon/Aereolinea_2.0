@model aereoliniafinal.Models.Vuelos

@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <h3 class="card-header font-weight-bold text-uppercase py-4  text-center">
        Ingrese los datos del vuelo
    </h3>

</div>
<br />

<hr />

<div class="row">
    <div class="col-md-4">
        
        <form asp-action="Create">
            <div class="form-row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-10">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group col-md-10">
                    <label asp-for="FechaSalida" class="control-label"></label>
                    <input asp-for="FechaSalida" class="form-control" />
                    <span asp-validation-for="FechaSalida" class="text-danger"></span>
                </div>
                <div class="form-group col-md-10">
                    <label asp-for="FechaLlegada" class="control-label"></label>
                    <input asp-for="FechaLlegada" class="form-control" />
                    <span asp-validation-for="FechaLlegada" class="text-danger"></span>
                </div>
                <div class="form-group col-md-10">
                    <label asp-for="AvionesID" class="control-label"></label>
                    <select asp-for="AvionesID" class="form-control" asp-items="ViewBag.AvionesID"></select>
                </div>
                <div class="form-group col-md-10">
                    <label asp-for="CiudadesID" class="control-label"></label>
                    <select asp-for="CiudadesID" class="form-control" asp-items="ViewBag.CiudadesID"></select>
                </div>
            </div>

            <a type="button" class="btn btn-success" asp-action="Index">Volver atras </a> |
            <input type="submit" value="Crear" class="btn btn-primary" />
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
