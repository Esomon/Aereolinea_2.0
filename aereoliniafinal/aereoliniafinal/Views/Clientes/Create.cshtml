@model aereoliniafinal.Models.Cliente

@{
    ViewData["Title"] = "Create";
}
<br />
<br />

<div class="card">
    <h3 class="card-header font-weight-bold text-uppercase py-4  text-center">
        Ingrese los datos del cliente
    </h3>

</div>
<br />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-10">
                    <label asp-for="PaisID" class="control-label"></label>
                    <select asp-for="PaisID" class="form-control" asp-items="ViewBag.PaisID"></select>
                </div>
                <div class="form-group col-md-10">
                    <label asp-for="TipoSexoID" class="control-label"></label>
                    <select asp-for="TipoSexoID" class="form-control" asp-items="ViewBag.TipoSexoID"></select>
                </div>
                <div class="form-group col-md-10">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group col-md-10">
                    <label asp-for="Apellido" class="control-label"></label>
                    <input asp-for="Apellido" class="form-control" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>
                <div class="form-group col-md-10">
                    <label asp-for="Direccion" class="control-label"></label>
                    <input asp-for="Direccion" class="form-control" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
                <div class="form-group col-md-10">
                    <label asp-for="Edad" class="control-label"></label>
                    <input asp-for="Edad" class="form-control" />
                    <span asp-validation-for="Edad" class="text-danger"></span>
                </div>

            </div>
            <a type="button" class="btn btn-success" asp-action="Index">Volver atras </a> |
            <input type="submit" value="Crear" class="btn btn-primary" />
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


