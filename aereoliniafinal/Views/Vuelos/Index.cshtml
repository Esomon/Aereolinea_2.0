@model IEnumerable<aereoliniafinal.Models.Vuelos>

@{
    ViewData["Title"] = "Index";
}

<
<br />
<span class="table-add float-right mb-3 mr-2">
    <a asp-action="Create" class="text-success">

        <i class="fas fa-plus fa-2x" aria-hidden="true"></i>
    </a>
</span>
<br />
<br />
<br />

<div class="card">
    <h3 class="card-header font-weight-bold text-uppercase py-4  text-center">
        Vuelos

    </h3>

</div>

<div class="card-body">
    <div id="table" class="table-editable">

        <table class="table table-bordered table-responsive-md table-striped text-center">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaSalida)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaLlegada)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Aviones)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ciudades)
                    </th>
                    <th>Detalles</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaSalida)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaLlegada)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Aviones.Modelo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ciudades.Nombre)
                    </td>
                    <td>
                        <!--Primer boton -->
                        <span class="table-up">
                            <a asp-action="Details" asp-route-id="@item.VuelosID" class="indigo-text">
                                <span style="font-size:25px; color: green; ">
                                    <i class="fas fa-info-circle"
                                       aria-hidden="true"></i>
                                </span>
                            </a>
                        </span>
                    </td>
                    <td>
                        <!--Segundo boton -->
                        <span style="font-size: 25px; color: Dodgerblue; margin:2px;">
                            <a asp-action="Edit" asp-route-id="@item.VuelosID" class="fas fa-user-edit"></a>
                        </span>

                        <!--Tercer boton -->
                        <span style="font-size: 25px; color:red;">
                            <a asp-action="Delete" asp-route-id="@item.VuelosID">
                                <span style="font-size: 25px; color: red; margin:2px;">
                                    <i class="fas fa-trash-alt"></i>
                                </span>
                            </a>
                        </span>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        </div>
</div>