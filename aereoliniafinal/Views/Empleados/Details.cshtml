@model aereoliniafinal.Models.Empleados

@{
    ViewData["Title"] = "Details";
}

<div>
    <span style="font-size:20px; text-align:center; ">
        <dt class="list-group-item active">
            Detalles del los empleados
        </dt>
    </span>
    <dl class="list-group">
        <dt class="list-group-item">
            @Html.DisplayNameFor(model => model.TipoEmpleado)
        </dt>
        <dd class="list-group-item">
            @Html.DisplayFor(model => model.TipoEmpleado.Nombre)
        </dd>
        <dt class="list-group-item">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="list-group-item">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="list-group-item">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class="list-group-item">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="list-group-item">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class="list-group-item">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt class="list-group-item">
            @Html.DisplayNameFor(model => model.Edad)
        </dt>
        <dd class="list-group-item">
            @Html.DisplayFor(model => model.Edad)
        </dd>
    </dl>
</div>
<div>
    <a type="button" class="btn btn-success" asp-action="Index">Volver atras </a> |
    <a type="button" class="btn btn-danger" asp-action="Edit" asp-route-id="@Model.EmpleadosID">Editar</a>

</div>