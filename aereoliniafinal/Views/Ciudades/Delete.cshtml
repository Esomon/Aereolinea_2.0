@model aereoliniafinal.Models.Ciudades

@{
    ViewData["Title"] = "Delete";
}

<br />
<h3>¿Esta seguro de eliminar esta ciudad?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pais)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pais.Nombre)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CiudadesID" />
        <a type="button" class="btn btn-success" asp-action="Index">Cancelar</a> |
        <input type="submit" value="Eliminar" class="btn btn-danger" />
    </form>
</div>
